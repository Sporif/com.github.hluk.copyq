{
    "app-id": "com.github.hluk.copyq",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "copyq",

    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-config/autostart:create"
    ],

    "modules": [
        {
            "name": "copyq",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hluk/CopyQ.git",
                    "tag": "v3.9.3",
                    "commit": "6d58dfd7ce90d6e3fd6b7b362fa4cb0ea1e5aa86"
                }
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DICON_NAME=com.github.hluk.copyq",
                "-DCOPYQ_AUTOSTART_COMMAND=flatpak run com.github.hluk.copyq"
            ]
        }
    ]
}
