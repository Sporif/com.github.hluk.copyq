{
    "app-id": "com.github.hluk.copyq",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "copyq",

    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-config/autostart:create"
    ],

    "modules": [
        {
            "name": "copyq",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/hluk/CopyQ.git",
                    "tag": "v3.9.0",
                    "commit": "93520a338d7825d50f2b0af2e067d9edb369b98c"
                },
                {
                    "type": "patch",
                    "path": "0001-Add-required-tag-for-flatpak.patch"
                }
            ],
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DICON_NAME=com.github.hluk.copyq",
                "-DCOPYQ_AUTOSTART_COMMAND=flatpak run com.github.hluk.copyq"
            ]
        }
    ]
}
